<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">






        <!-- Title Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Profile Information"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nickname:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textNickname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Nickname Placeholder"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <!-- Form Fields -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First name:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>



        <TextView
            android:id="@+id/textFirstName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="First Name Placeholder"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last name:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textLastName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Last Name Placeholder"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hobby:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textHobby"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Hobby Placeholder"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite food:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textFavFood"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Favorite Food Placeholder"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite movie:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textFavMovie"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Favorite Movie Placeholder"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite music:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textFavMusic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Favorite Music Placeholder"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/closeButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/primary_color"
            android:text="Close"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>
