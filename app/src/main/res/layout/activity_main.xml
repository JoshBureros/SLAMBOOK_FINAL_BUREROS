<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="263dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/onepiece" />

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginStart="-348dp"
        android:layout_marginTop="200dp"
        android:background="@color/primary_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="50dp"
            android:text="Start Your Slam Book Journey"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginStart="-345dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="32dp"
            android:lineSpacingExtra="8dp"
            android:text="Your slam book is a place to capture memories, share thoughts, and connect with others in a meaningful way. Whether you're looking to reflect on your own experiences or gather stories from friends, it's the perfect way to document your lifeâ€™s journey."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <Button
            android:id="@+id/startButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="280dp"
            android:layout_marginStart="-330dp"
            android:text="Start Slambook"
            android:textColor="@android:color/white" />

    </LinearLayout>


</LinearLayout>