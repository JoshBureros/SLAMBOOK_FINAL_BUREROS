<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Effect -->
    <item android:right="6dp" android:left="6dp" android:top="6dp">
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Light shadow color -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Card Background -->
    <item>
        <shape>
            <!-- Main background color -->
            <solid android:color="@color/white" />

            <!-- Rounded corners -->
            <corners android:radius="12dp" />

            <!-- Border/stroke -->
            <stroke
                android:width="1dp"
                android:color="@color/primary_color" />
        </shape>
    </item>
</layer-list>
